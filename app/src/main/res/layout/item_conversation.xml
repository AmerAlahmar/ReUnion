<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    android:padding="@dimen/conversationAndUserItemLayoutPadding">

    <ImageView
        android:id="@+id/coloredCircleImageView"
        android:layout_width="@dimen/conversationAndUserItemColoredCircleDimen"
        android:layout_height="@dimen/conversationAndUserItemColoredCircleDimen"
        android:layout_marginEnd="@dimen/conversationAndUserItemColoredCircleMargin"
        android:layout_marginRight="@dimen/conversationAndUserItemColoredCircleMargin"
        android:contentDescription="@string/coloredCircleImageViewDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/opponentNameText"
            style="@style/primaryTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLines="1"
            tools:text="Anwar" />

        <TextView
            android:id="@+id/lastMessageText"
            style="@style/secondaryTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            tools:text="Dude can you solve this problem please" />
    </LinearLayout>
</LinearLayout>
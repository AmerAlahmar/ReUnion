<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    android:padding="@dimen/conversationAndUserItemLayoutPadding">

    <TextView
        android:id="@+id/coloredCircleText"
        android:layout_width="@dimen/conversationAndUserItemColoredCircleDimen"
        android:layout_height="@dimen/conversationAndUserItemColoredCircleDimen"
        android:layout_marginEnd="@dimen/conversationAndUserItemColoredCircleMargin"
        android:layout_marginRight="@dimen/conversationAndUserItemColoredCircleMargin"
        android:background="@drawable/colored_circle_bg"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/conversationAndUserItemColoredCircleTextSize"
        tools:text="A" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameText"
            style="@style/primaryTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLines="1"
            tools:text="Anwar Hussein" />

        <TextView
            android:id="@+id/emailText"
            style="@style/secondaryTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            tools:text="team5@nomail.me" />
    </LinearLayout>
</LinearLayout>